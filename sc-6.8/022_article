if test -f 'sres.sed' -a "${1}" != "-c" ; then 
  echo shar: Will not clobber existing file \"'sres.sed'\"
else
  echo shar: Extracting \"'sres.sed'\" \(50 characters\)
  sed "s/^X//" >'sres.sed' <<'END_OF_FILE'
X/%token.*S_/!d
X/%token.*S_\(.*\)/s//	"\1",	S_\1,/
END_OF_FILE
  if test 50 -ne `wc -c <'sres.sed'`; then
